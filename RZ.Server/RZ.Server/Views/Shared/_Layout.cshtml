@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<style>
    html {
        position: relative;
        min-height: 100%;
    }

    .footer {
        position: fixed;
        bottom: -10px;
        width: 100%;
        /* Set the fixed height of the footer here */
        height: 40px;
        /*background-color: #f5f5f5;*/
        text-align: right;
        left: -15px;
        z-index: -1;
    }
</style>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="free open source package manager for windows with public software repository" />
    <meta name="keywords" content="opensource,software,package,application,update,management,deployment,oneget,powershell,commandline" />
    <title>RuckZuck Software Package Manager for Windows</title>
    <link rel="icon" type="image/ico" sizes="16x16" href="~/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @*@Html.Raw(JavaScriptSnippet.FullScript)*@
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <div class="container">
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                &#x2630;
            </button> <a asp-area=""
                         asp-controller="Home" asp-action="Index" class="navbar-brand">RuckZuck</a>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*
                        <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                        </li>*@
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">About</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Support" class="nav-link">Support</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Repository" class="nav-link">Repository</a>
                    </li>
                    <li class="nav-item">
                        <a href="https://github.com/rzander/ruckzuck/wiki" target="_blank" class="nav-link">Wiki</a>
                    </li>
                    <li class="nav-item">
                        <a href="https://github.com/rzander/ruckzuck/issues" target="_blank" class="nav-link">Forum</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Sponsors" class="nav-link">Sponsors</a>
                    </li>
                    @*
                        <li data-toggle="tooltip" title="Pushbullet feed for new Versions and reported Issues..."
                        class="nav-item"> <a class="pushbullet-subscribe-widget nav-link" data-channel="ruckzuck"
                            data-widget="button" data-size="small"></a>
                        </li>*@
                    <li data-toggle="tooltip" title="RSS Feed with all Repository changes..."
                        class="nav-item">
                        <a href="/rss.aspx" class="nav-link">
                            <span>
                                <img src="/Images/RSS_24.png" alt="RSS" title="RSS">
                            </span>
                        </a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Admin" asp-action="Index" class="nav-link">Admin</a>
                        </li>
                    </ul>}
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
    

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer py-3 mt-auto bg-white row">
        <div class="col-sm-7" style="text-align:left;display:inline-block">
            <p style="display:inline-block;padding-right:30px;margin-left:10px">Sponsored by:</p>
            <a href="https://www.itnetx.ch" target="_blank"><img alt="itnetX (Switzerland) AG" src="~/images/itnetx_Logo_small.png" height="24" style="display:inline-block;padding-right:30px" /></a>
            <a href="https://www.basevision.ch" target="_blank"><img alt="baseVision AG" src="~/images/baseVISION_small.png" height="24" style="display:inline-block;padding-right:30px" /></a>
            <a href="https://www.romawo.com" target="_blank"><img alt="ROMAWO managed workplace" src="~/images/ROMAWO_Header_oo_small24.png" height="24" style="display:inline-block;padding-right:30px" /></a>
            <a href="https://www.optimio.com" target="_blank"><img alt="optimio AG" src="~/images/optimio_small.png" height="24" style="display:inline-block;padding-right:30px" /></a>
        </div>
        <div class="col-sm-5" style="text-align:right">
            <p>&copy; 2022 by Zander-Tools , RuckZuck Server @ViewBag.appVersion</p>
        </div>

    </footer>


    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
